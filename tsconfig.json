{
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "./dist"
    ],
    "compilerOptions": {
        "removeComments": true,
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "watchOptions": {
        "excludeDirectories": [
            "node_modules",
            "./dist"
        ]
    }
}